<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="152dp"
        android:layout_height="51dp"
        android:text="Main Menu"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/btnForm"
        android:layout_width="81dp"
        android:layout_height="76dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="162dp"
        android:background="@android:drawable/sym_action_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="118dp"
        android:layout_height="57dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="60dp"
        android:drawableRight="@android:drawable/ic_dialog_info"
        android:text="About "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnForm" />

    <Button
        android:id="@+id/btnHobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="76dp"
        android:text="Hobby"
        app:layout_constraintStart_toEndOf="@+id/btnForm"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/btnList"
        android:layout_width="69dp"
        android:layout_height="65dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toEndOf="@+id/btnAbout"
        app:layout_constraintTop_toBottomOf="@+id/btnHobby"
        app:srcCompat="@android:drawable/stat_notify_chat" />

</androidx.constraintlayout.widget.ConstraintLayout>